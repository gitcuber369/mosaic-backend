{
  "compilerOptions": {
    // Language features
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Path setup
    "rootDir": "./src",
    "outDir": "./dist",

    // Compatibility
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // Dev options
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
